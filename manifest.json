{
  "manifest_version": 2,
  "name": "Handsfree",
  "version": "0.1.1",
  "description": "Use voice commands to browse the web",
  "browser_action": {
    "default_title": "Handsfree",
    "default_icon": "start.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["vendor/jquery.js", "vendor/underscore.js", "content.js"],
    "css": ["handsfree.css"],
    "run_at": "document_start"
  }],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
